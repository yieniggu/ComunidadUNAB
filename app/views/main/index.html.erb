<div class="container login-container" align="center">
    <h6 class="display-4"> 
        <span style="color: rgba(20, 3, 117, 0.8)">Comunidad</span>
        <span style="color: rgba(235, 4, 15, 0.8)"> UNAB</span>
    <h6>

    <h2 class="login-title" align="center">Ingreso a la plataforma</h2>

    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
        <div class="form-group">
            <div class="col-sm-8">
                <%= f.email_field :email, class: "form-control login", placeholder: "Correo", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8">
                <%= f.password_field :password, class: "form-control login", autocomplete: "off" , placeholder: "ContraseÃ±a"%>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 justify-content-center">
                <div class="row justify-content-center">
                    <%= f.submit "Ingresar", class: 'btn btn-primary btn-lg login-submit' %>
                </div>
            </div>
        </div>
    <% end %> 
</div>